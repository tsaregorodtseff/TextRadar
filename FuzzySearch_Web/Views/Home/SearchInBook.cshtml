@model TextRadarFuzzySearchDemo.Models.SearchInBook

<div id="searchresults">

    <h3>Результаты поиска (@Model.NumberOfResults)</h3>

    @for (int i = 0; i < Model.NumberOfResults; i++)
    {

        @(i + 1)
        @MvcHtmlString.Create(".")

        <span class="coefficient">
            @MvcHtmlString.Create(" [")
            @(Math.Round(Model.Results[i].Relevance, 3))
            @MvcHtmlString.Create("] ")
        </span>

        <span class="pagenumber">
            @MvcHtmlString.Create(" стр. ")
            @(Model.Results[i].InitialIndex + 1)
            @MvcHtmlString.Create(" ")
        </span>

        @MvcHtmlString.Create(Model.Results[i].BriefDisplayOfFoundFragments)

        @Html.ActionLink("  Детали...", "Details", new { Index = (Model.Results[i].InitialIndex + 1), SearchString = Model.SearchString, Relevance = Model.Results[i].Relevance }, new { target = "_blank" })

        <br>

    }


</div>
